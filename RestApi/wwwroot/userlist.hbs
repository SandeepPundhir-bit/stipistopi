<h1>Users</h1>
<table>
    <thead>
        <th>Name</th>
        <th>Role</th>
        <th>Action</th>
    </thead>
    {{#each this}}
        {{#if isEditing}}
            {{> userEditLineInList}}
        {{else}}
            {{> userLineInList}}
        {{/if}}
    {{/ each}}
</table>
<div class="userListButtons">
    <div id="buttonRefreshUserList" class="button">Refresh</div>
</div>